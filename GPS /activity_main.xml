<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohan.gpsapp.MainActivity">

    <Button
        android:id="@+id/gpsStatusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="clickButton"
        android:text="Get GPS Status"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/gpsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gpsStatusButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/getLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gpsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:onClick="clickButton"
        android:text="Get Location"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getLocationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:maxLines="7"
        android:minLines="7"
        android:textAlignment="center"
        android:textSize="18sp" />
</RelativeLayout>
