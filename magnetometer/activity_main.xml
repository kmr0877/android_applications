<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohan.magnetometer.MainActivity">

    <Button
        android:id="@+id/readButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:onClick="buttonClick"
        android:text="Read Magnetometer Data"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/readDataTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/readButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:lines="2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headingButton"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:lines="2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/northHeadingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headingTextView"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:lines="2"
        android:textSize="18sp" />

    <Button
        android:id="@+id/headingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/readDataTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:onClick="buttonClick"
        android:text="Get Heading"
        android:textAppearance="@style/TextAppearance.AppCompat" />
</RelativeLayout>
