<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mohan.com.accelerometerapp.MainActivity">

    <Button
        android:id="@+id/allSensorsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:onClick="buttonClick"
        android:text="All Sensors List"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/accelerometerReadingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allSensorsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:onClick="buttonClick"
        android:text="Accelerometer Reading"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/orientationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accelerometerReadingButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:onClick="buttonClick"
        android:text="Check Orientation/Position"
        android:textAppearance="@style/TextAppearance.AppCompat" />
</RelativeLayout>
